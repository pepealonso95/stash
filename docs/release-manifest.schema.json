{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/pepealonso95/stash/docs/release-manifest.schema.json",
  "title": "Stash Release Manifest",
  "description": "Manifest contract for release installer assets.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "app_asset",
    "backend_wheel_asset",
    "checksums_asset",
    "minimum_macos",
    "minimum_python"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "app_asset": {
      "type": "string",
      "pattern": "^stash-local-macos-universal-[0-9]+\\.[0-9]+\\.[0-9]+\\.tar\\.gz$"
    },
    "backend_wheel_asset": {
      "type": "string",
      "pattern": "^stash-backend-[0-9]+\\.[0-9]+\\.[0-9]+-py3-none-any\\.whl$"
    },
    "checksums_asset": {
      "type": "string",
      "pattern": "^stash-local-checksums-[0-9]+\\.[0-9]+\\.[0-9]+\\.txt$"
    },
    "minimum_macos": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "minimum_python": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    }
  }
}
